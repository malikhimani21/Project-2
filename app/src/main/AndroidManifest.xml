<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/img3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IncludeLayouts"
            android:label="Include and Merge Layouts"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".ShowHideLayout"
            android:label="Show and Hide Layouts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SearchImplement"
            android:label="Search"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SmsActivity"
            android:label="SMS"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BackpressActivity"
            android:label="Backpress"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WallpaperActivity"
            android:label="Wallpaper"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BrowserAppActivity"
            android:label="Browser"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Login Activity" />
        <activity
            android:name=".MainActivity"
            android:label="Home" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>